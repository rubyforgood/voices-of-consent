<p id="notice"><%= notice %></p>

<h1>Requesters</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Street address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>County</th>
      <th>Phone</th>
      <th>Ok to email</th>
      <th>Ok to text</th>
      <th>Ok to call</th>
      <th>Ok to mail</th>
      <th>Underage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requesters.each do |requester| %>
      <tr>
        <td><%= requester.first_name %></td>
        <td><%= requester.last_name %></td>
        <td><%= requester.street_address %></td>
        <td><%= requester.city %></td>
        <td><%= requester.state %></td>
        <td><%= requester.zip %></td>
        <td><%= requester.county %></td>
        <td><%= requester.phone %></td>
        <td><%= requester.ok_to_email %></td>
        <td><%= requester.ok_to_text %></td>
        <td><%= requester.ok_to_call %></td>
        <td><%= requester.ok_to_mail %></td>
        <td><%= requester.underage %></td>
        <td><%= link_to 'Show', requester %></td>
        <td><%= link_to 'Edit', edit_requester_path(requester) %></td>
        <td><%= link_to 'Destroy', requester, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

